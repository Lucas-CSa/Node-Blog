{{#each errors}}
    <div class="alert alert-danger">{{text}}</div>
    {{else}}
{{/each}}
<h3>Edit Category</h3>
<div class="card">
    <div class="card-body">
    <form action="/admin/cat/edit" method="POST">
        <input type="hidden" name="id" id="id" value="{{category._id}}">
        <label for="name">Name: </label>
        <input type="text" name="name" id="name" placeholder="Category Name: " class="form-control" value="{{category.name}}">
        <label for="slug">Slug: </label>
        <input type="text" name="slug" id="slug" placeholder="Category Slug: "  class="form-control" value="{{category.slug}}">
        <button class="btn btn-success mt-2">Register</button>
</form>
    </div>
</div>